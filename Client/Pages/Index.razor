@page "/"
@inherits IndexModel

<PageTitle>Index (@System.Reflection.Assembly.GetExecutingAssembly().GetName().Version)</PageTitle>

<h1>Onboarding</h1>

@if (base.IsLoading)
{
    <h3>Loading...</h3>
}
else
{
    <MudButton StartIcon="@Icons.Material.Filled.CheckCircle" Color="Color.Default" OnClick="HandleCreateDialog">Create new onboarding</MudButton>
    <MudButton StartIcon="@Icons.Material.Filled.Refresh" Color="Color.Default" OnClick="RefreshData">Refresh</MudButton>

    <MudGrid>
        @foreach (var item in base.Items)
        {
            <MudItem xs="12" sm="6" md="4" lg="3">
                <OnboardingDetails SelectedItem="@item" OnNotifyParentItemDeleted="SelectedItemDeleted" />
            </MudItem>
        }
    </MudGrid>
}