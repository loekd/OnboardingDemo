@inherits OnboardingDetailsModel

<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.body2">Overview</MudText>

        <MudField Label="First name:" Variant="Variant.Text">
            <MudText Label="First name" Variant="Variant.Text">@SelectedItem!.FirstName</MudText>
        </MudField>

        <MudField Label="Last name:" Variant="Variant.Text">
            <MudText Label="Last name" Variant="Variant.Text">@SelectedItem!.LastName</MudText>
        </MudField>

        <MudField Label="Screening status:" Variant="Variant.Text">
            @switch (SelectedItem!.Status)
            {
                case Onboarding.Shared.Status.NotApproved:
                    {
                        <MudBadge Icon="@Icons.Material.Filled.Lock" Color="Color.Error" Overlap="false" Bordered="true" Class="mx-6 my-4">
                            <MudText Color="Color.Error" Variant="Variant.Filled" DisableElevation="true">Not approved</MudText>
                        </MudBadge>
                        break;
                    }
                case Onboarding.Shared.Status.Approved:
                    {
                        <MudBadge Icon="@Icons.Material.Filled.Check" Color="Color.Success" Overlap="false" Bordered="true" Class="mx-6 my-4">
                            <MudText Color="Color.Success" Variant="Variant.Filled" DisableElevation="true">Approved</MudText>
                        </MudBadge>
                        break;
                    }
                case Onboarding.Shared.Status.Pending:
                    {
                        <MudBadge Icon="@Icons.Material.Filled.LockClock" Color="Color.Info" Overlap="false" Bordered="true" Class="mx-6 my-4">
                            <MudText Color="Color.Info" Variant="Variant.Filled" DisableElevation="true">Pending</MudText>
                        </MudBadge>
                        break;
                    }
                case Onboarding.Shared.Status.Skipped:
                    {
                        <MudBadge Icon="@Icons.Material.Filled.SkipNext" Color="Color.Success" Overlap="false" Bordered="true" Class="mx-6 my-4">
                            <MudText Color="Color.Success" Variant="Variant.Filled" DisableElevation="true">Skipped</MudText>
                        </MudBadge>
                        break;
                    }
            }
        </MudField>

    </MudCardContent>

</MudCard>